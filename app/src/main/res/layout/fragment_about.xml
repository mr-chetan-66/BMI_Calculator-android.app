    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true"
    android:padding="16dp">

    <!-- About BMI Section -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/dividerVertical"
        android:orientation="vertical"
        android:showDividers="middle">

        <!--  BMI Formula -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:elevation="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1C1C1C"
                android:padding="10dp">

                <!-- Header: About BMI -->
                <TextView
                    android:id="@+id/bmi_formula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:onClick="toggleVisibility"
                    android:text="BMI Formula"
                    android:textColor="#EA2831"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Dropdown Icon -->
                <ImageView
                    android:id="@+id/dropdowna_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Dropdown Icon"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dropdown_arrow" />

                <!-- Content: About BMI -->
                <TextView
                    android:id="@+id/about_bmi_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Body Mass Index (BMI) is a simple formula used to calculate whether a person has a healthy weight for their height. Formula: BMI = Weight in kilograms / (Height in meters)^2"
                    android:visibility="gone" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- FAQs -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:elevation="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1C1C1C"
                android:padding="10dp">

                <!-- Header: About BMI -->
                <TextView
                    android:id="@+id/faq_bmi_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:onClick="toggleVisibility"
                    android:text="FAQs"
                    android:textColor="#EA2831"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Dropdown Icon -->
                <ImageView
                    android:id="@+id/dropdowndb_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Dropdown Icon"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dropdown_arrow" />

                <TextView
                    android:id="@+id/faq_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="1. How accurate is BMI? BMI is a general indicator and may not be accurate for athletes.\n2. What is a normal BMI range? The normal BMI range is between 18.5 and 24.9."
                    android:visibility="gone" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- How to Improve BMI Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:elevation="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1C1C1C"
                android:padding="10dp">

                <!-- Header: About BMI -->
                <TextView
                    android:id="@+id/improve_bmi_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:drawablePadding="10dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:onClick="toggleVisibility"
                    android:text="How to Improve BMI"
                    android:textColor="#EA2831"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Dropdown Icon -->
