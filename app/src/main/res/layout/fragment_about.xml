                <TextView
                    android:id="@+id/side_effects_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Low BMI: Weak immune system, nutrient deficiencies, etc. High BMI: Heart disease, diabetes, high blood pressure, etc."
                    android:visibility="gone" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- History of BMI Section -->
        <androidx.cardview.widget.CardView
